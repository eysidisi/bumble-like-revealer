{
  "manifest_version": 3,
  "name": "Bumble Like Revealer",
  "version": "0.1",
  "description": "Reveals if a Bumble user has already liked you based on 'their_vote'",
  "permissions": [
    "scripting",
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Open Bumble Revealer"
  },
  "host_permissions": [
    "https://bumble.com/*",
    "https://*.bumble.com/*"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://bumble.com/app*",
        "https://*.bumble.com/app*"
      ],
      "js": [
        "src/content/content.js",
        "src/shared/secure.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/injected/page.js",
        "src/shared/models.js",
        "src/shared/constants.js",
        "src/shared/handlers.js",
        "src/injected/patchFetch.js",
        "src/injected/patchXMLHttpRequest.js"
      ],
      "matches": [
        "https://bumble.com/*",
        "https://*.bumble.com/*"
      ]
    }
  ]
}
